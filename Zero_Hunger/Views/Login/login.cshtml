@model Zero_Hunger.EF.Restaurant

@{
    ViewBag.Title = "Login";
}



@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f1f1f1;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
        }

        h2 {
            color: #333;
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        input[type="submit"] {
            background-color: #00FFC1;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 300px;
        }

            input[type="submit"]:hover {
                background-color: #00A084;
            }

        p {
            color: #d9534f;
            margin-top: 10px;
        }

        a {
            text-decoration: none;
            color: #007bff;
        }
        label {
           left:0;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>

        <form method="post" action="">
            <input type="hidden" value="@ViewBag.id" name="id" /> 
            <label for="username">Username:</label>
            <input class="form-control" type="text" name="username" id="username" placeholder="Enter username" required />

            <label for="password">Password:</label>
            <input class="form-control" type="password" name="password" id="password" placeholder="Enter password" required />

            <br />

            <input type="submit" value="Login" />

            <p>Forgot your password? <a href="~/Controllers/HomeController.cs">Back</a></p>
        </form>
    </div>
</body>
</html>


@if (Session["password"] != null)
{
    <p>@Session["password"]</p>
}
