@model IEnumerable<product_manage_task.EF.Category>

@{
    ViewBag.Title = "Category";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cat_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.c_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_quantity_inside_cat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.logo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cat_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.c_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_quantity_inside_cat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.logo)
        </td>
        <td class="btn btn-secondary">
            @Html.ActionLink("Details", "Details", new {id=item.cat_id })
            
        </td>
    </tr>
}

</table>
